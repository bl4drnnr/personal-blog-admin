{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "src/app/components/*",
        "src/app/components/basic-components/*",
        "src/app/components/pages-components/*",
        "src/app/components/layout-components/*",
        "src/app/components/dashboard-components/*"
      ],
      "@pages/*": [
        "src/app/pages/*",
        "src/app/pages/credentials/*",
        "src/app/pages/dashboard/*"
      ],
      "@shared/*": [
        "src/app/shared/*",
        "src/app/shared/api/*",
        "src/app/shared/global-components-services/*"
      ],
      "@env/*": ["src/app/environments/*"],
      "@services/*": [
        "src/app/shared/services/*"
      ],
      "@interfaces/*": [
        "src/libs/interfaces/*",
        "src/libs/interfaces/components/*",
        "src/libs/interfaces/pages/*",
        "src/libs/interfaces/api/*",
        "src/libs/types/components/*",
        "src/libs/types/api/*",
        "src/libs/types/translations/*",
        "src/libs/api/controllers/*",
        "src/libs/api/endpoints/*",
        "src/libs/api/methods/*",
        "src/libs/api/errors/*",
        "src/libs/enums/api/*"
      ],
      "@responses/*": [
        "src/libs/api/responses/auth/*",
        "src/libs/api/responses/mfa/*",
        "src/libs/api/responses/phone/*",
        "src/libs/api/responses/recovery/*",
        "src/libs/api/responses/users/*",
        "src/libs/api/responses/email/*",
        "src/libs/api/responses/company/*",
        "src/libs/api/responses/company-roles/*",
        "src/libs/api/responses/company-users/*",
        "src/libs/api/responses/articles/*",
        "src/libs/api/responses/categories/*"
      ],
      "@payloads/*": [
        "src/libs/api/payloads/auth/*",
        "src/libs/api/payloads/mfa/*",
        "src/libs/api/payloads/phone/*",
        "src/libs/api/payloads/recovery/*",
        "src/libs/api/payloads/users/*",
        "src/libs/api/payloads/email/*",
        "src/libs/api/payloads/articles/*",
        "src/libs/api/payloads/categories/*"
      ],
      "@layouts/*": ["src/app/layouts/*"],
      "@modules/*": ["src/app/modules/*"],
      "@translations/*": ["src/libs/enums/translations/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
